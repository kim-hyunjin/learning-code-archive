{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/types/*": ["types/*"],
      "@/styles/*": ["styles/*"],
      "@/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "declarations.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.module.css"
  ],
  "exclude": ["node_modules"]
}
